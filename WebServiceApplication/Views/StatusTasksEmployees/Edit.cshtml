}

<h2>Статус задачи</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <dt>
        @Html.DisplayNameFor(model => model.Employeе)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Employeе.FullName)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.TasksEmployee)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.TasksEmployee.FullName)
