        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="align-baseline">
                        Наименование
                    </th>
                    <th class="align-baseline">
                        Заводской номер
                    </th>
                    <th class="align-baseline">
                        Внешний идентификатор прибора учета
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MeteringDevices)
                {
