                            @Html.DisplayFor(modelItem => item.FactoryNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDMeteringDevice)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



